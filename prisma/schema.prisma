generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
}

model Client {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  password String
  sales    sales[]
}

model products {
  id          Int         @id @default(autoincrement())
  description String
  value       Float
  saleItems   SaleItems[]
}

model sales {
  id         Int         @id @default(autoincrement())
  totalValue Float
  saleDate   DateTime    @default(now())
  clientId   Int?
  items      SaleItems[]
  client     Client?     @relation(fields: [clientId], references: [id])
}

model SaleItems {
  id          Int      @id @default(autoincrement())
  saleId      Int
  productId   Int
  quantity    Int
  priceAtSale Float
  product     products @relation(fields: [productId], references: [id])
  sale        sales    @relation(fields: [saleId], references: [id])
}
